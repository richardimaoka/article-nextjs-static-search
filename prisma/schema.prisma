generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id       String @id @default(cuid())
  name     String @unique
  category String @unique
  articles Article[]
}

model Article {
  id        String   @id @default(cuid())
  title     String
  article   String
  category  Category @relation(fields: [categoryName], references: [category])
  categoryName String
  date      DateTime
  views     Int
  tags      ArticleTag[]
}

model Tag {
  id      String   @id @default(cuid())
  name    String   @unique
  articles ArticleTag[]
}

model ArticleTag {
  article   Article @relation(fields: [articleId], references: [id])
  articleId String
  tag       Tag     @relation(fields: [tagId], references: [id])
  tagId     String

  @@id([articleId, tagId]) // Composite primary key
}